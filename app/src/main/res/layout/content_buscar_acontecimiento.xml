<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_buscar_acontecimiento"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rafa.srevento.BuscarAcontecimientoActivity"
    tools:showIn="@layout/activity_buscar_acontecimiento"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout android:layout_width="368dp"
        android:layout_height="551dp" android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:paddingBottom="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="16dp"
        android:weightSum="1">

        <TextView
            android:text="@string/texto_buscar_acontecimiento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/introduce_id_text" />

        <EditText
            android:id="@+id/et_texto_buscar_acontecimiento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/texto_et_buscar_acontecimiento"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button_buscar_acontecimiento"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/button_buscar_acontecimiento" />

        <ProgressBar
            android:id="@+id/pb_buscar_acontecimiento"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_error_buscar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerAcontecimientos"
            android:layout_width="match_parent"
            android:layout_height="139dp"
            android:layout_weight="0.86" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
